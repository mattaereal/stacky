<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controller.main.RootLayoutController">
   <top>
      <MenuBar fx:id="mainMenuBar" prefHeight="29.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="mainMenuClose" mnemonicParsing="false" onAction="#closeAppAction" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Cards">
               <items>
              <MenuItem fx:id="mainMenuCardsView" mnemonicParsing="false" onAction="#openCardsView" text="View" />
               </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Decks">
               <items>
                  <MenuItem fx:id="mainMenuDecksView" mnemonicParsing="false" text="View" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="mainMenuAbout" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
